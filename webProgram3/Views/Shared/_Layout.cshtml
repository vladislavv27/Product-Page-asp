<!DOCTYPE html>
<html lang="en">
<head>
    @{
        bool inAdminRole = User.IsInRole("admin");
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>4Gamers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webProgram3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">4Gamers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                     
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            if(User.IsInRole("Admin"))
                            {

                        <li class="nav-item">
                                    <a class="nav-link text-success" asp-area="" asp-controller="Diliverytype" asp-action="Index">Dilivery Type Admin</a>
                        </li>
                        <li class="nav-item">
                                    <a class="nav-link text-success" asp-area="" asp-controller="Product" asp-action="Index">Product Admin</a>
                        </li>
                        <li class="nav-item">
                                    <a class="nav-link text-success" asp-area="" asp-controller="Category" asp-action="Index">Category Admin</a>
                        </li>
                            }
                        <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Productbuy" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Adress" asp-action="Create">Delivery address</a>
                        </li>

                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    
                        <a class="nav-link text-danger" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fas fa-shopping-cart"></i></a>
                   
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - webProgram3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
